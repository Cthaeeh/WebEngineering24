@model MyWebDbApp.Models.Department
@using MyWebDbApp.Areas.Identity.Data

@{
    ViewData["Title"] = "Edit Department";
}

<h1>Edit</h1>

<h4>Deparment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ChiefId" class="form-label"></label>
                <select asp-for="ChiefId" class="form-control" asp-items="@(new SelectList(ViewData["Chiefs"] as List<AppUser>, "Id", "UserName"))">
                    <option value="">-- Select Chief --</option>
                </select>
                <span asp-validation-for="ChiefId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
