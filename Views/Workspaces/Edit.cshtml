@model MyWebDbApp.Models.Workspace

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Workspace</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">       
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>      
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="RoomId" class="form-label"></label>
                <select asp-for="RoomId" class="form-control" asp-items="@(new SelectList(ViewData["Rooms"] as List<MyWebDbApp.Models.Room>, "Id", "Name"))">
                    <option value="">-- Select Room --</option>
                </select>
                <span asp-validation-for="RoomId" class="text-danger"></span>
            </div>          
            <div class="mb-3">
                <label for="equipmentList" class="form-label">Equipment</label>
                <input type="text" id="equipmentList" name="equipmentList" class="form-control" value="@string.Join(", ", Model.Equipment.Select(e => e.Name))" placeholder="Separate items with commas" />
                <span asp-validation-for="Equipment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}