@model IEnumerable<MyWebDbApp.Models.Customer>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EMail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Birthday)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gender)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShareStocks)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShareBonds)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
        </td>
    </tr>
}

@if ((bool)ViewData["More"])
{
    <tr id="LoadRow">
        <td colspan="100%">
            <button id="LoadButton" onclick="loadmore()" data-from="@ViewData["From"]" data-length="@ViewData["Length"]" class="btn btn-primary">Load more...</button>
        </td>
    </tr>
}
